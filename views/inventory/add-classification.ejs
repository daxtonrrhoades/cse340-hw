 <% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
   <% }) %>
    </ul>
    <% } %>

<form action="/inv/addClassification" id="addClassificationForm" method="post">
    <fieldset>
        <span>REMINDER: The classification must only contain alphabetic characters</span>
        <label for="classificationName">* Classification Name:</label>
        <input type="text" name="classification_name" id="classificationName" required pattern="[A-Za-z]+">
        <button type="submit">Add Classification</button>
    </fieldset>
</form>